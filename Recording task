class Recording:
    def __init__(self, length: int):
        if length >= 0:
            self._length = length
        else:
            raise ValueError
    
    @property
    def length(self):
        return self._length
    
    @length.setter
    def length(self, value):
        if value >= 0:
            self._length = value
        else:
            raise ValueError

if __name__ == "__main__":
    the_wall = Recording(43)
    print(the_wall.length)
    the_wall.length = 44
    print(the_wall.length)
